{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./dist/",
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "src",
    "importHelpers": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "paths": {
      "@/*": ["./*"]
    }
  }
}
